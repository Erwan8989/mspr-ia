<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".ClientAccueil">

	<ScrollView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			tools:ignore="MissingConstraints">


		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:orientation="vertical">

			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:orientation="vertical">

				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:gravity="center"
						android:orientation="horizontal">

					<Button
							android:id="@+id/btn_gardienner"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_marginStart="5dp"
							android:layout_weight="1"
							android:backgroundTint="@color/teal_700"
							android:gravity="center"
							android:text="Gardiennage" />

					<Button
							android:id="@+id/btn_monprofil"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_marginHorizontal="5dp"
							android:layout_weight="1"
							android:gravity="center"
							android:text="Mon profil" />

				</LinearLayout>

			</LinearLayout>


			<TextView
					android:id="@+id/login_text"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:paddingLeft="20dp"
					android:text="Le jardin botanique"
					android:textColor="@color/black"
					android:textSize="18sp" />

			<GridLayout
					android:id="@+id/GridLayout1"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:columnCount="2"
					android:orientation="horizontal"
					android:paddingHorizontal="9dp">

				<LinearLayout android:orientation="vertical">

					<ImageButton
							android:id="@+id/imageButton1"
							android:layout_width="200dp"
							android:layout_height="100dp"
							android:layout_gravity="top" />


					<TextView
							android:id="@+id/nom_card_accueil"
							android:layout_width="match_parent"
							android:layout_gravity="bottom"
							android:layout_height="wrap_content"
							android:text="Nom"
							android:textColor="@color/black"
							android:layout_below="@id/imageButton1"
							android:textSize="18sp" />

					<TextView
							android:id="@+id/date_card_accueil"
							android:layout_width="match_parent"
							android:layout_gravity="bottom"
							android:layout_height="wrap_content"
							android:text="Date de prise en charge"
							android:textColor="@color/black"
							android:textSize="18sp" />
				</LinearLayout>

			</GridLayout>


		</LinearLayout>
	</ScrollView>

	<Button
			android:id="@+id/btn_addPlant"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_gravity="bottom|end"
			android:layout_marginRight="16dp"
			android:layout_marginBottom="16dp"
			android:background="@drawable/circular_button"
			android:drawableBottom="@drawable/ic_add"
			android:padding="8dp"
			android:textColor="@android:color/white"
			tools:ignore="SpeakableTextPresentCheck" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
