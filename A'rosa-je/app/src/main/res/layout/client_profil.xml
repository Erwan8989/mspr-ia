<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent">


	<!--    Affichage top bar horizontal-->
	<com.google.android.material.appbar.AppBarLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="672dp">

		<TextView
				android:id="@+id/settings"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:drawableRight="@drawable/ic_setting"
				android:padding="16dp"
				android:text="@string/app_name"
				android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"

				/>

	</com.google.android.material.appbar.AppBarLayout>


	<ScrollView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="60dp"
			tools:ignore="MissingConstraints">

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:orientation="vertical">


			<TextView
					android:id="@+id/login_text"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:paddingLeft="20dp"
					android:text="Mon jardin"
					android:textColor="@color/black"
					android:textSize="18sp" />

			<GridLayout
					android:id="@+id/GridLayout1"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:columnCount="2"
					android:orientation="horizontal"
					android:paddingHorizontal="9dp">

				<LinearLayout android:orientation="vertical">

					<ImageButton
							android:id="@+id/imageButton1"
							android:layout_width="200dp"
							android:layout_height="100dp"
							android:layout_gravity="top" />


					<TextView
							android:id="@+id/nom_card_profil"
							android:layout_width="match_parent"
							android:layout_gravity="bottom"
							android:layout_height="wrap_content"
							android:text="Nom"
							android:textColor="@color/black"
							android:layout_below="@id/imageButton1"
							android:textSize="18sp" />

					<TextView
							android:id="@+id/date_card_accueil"
							android:layout_width="match_parent"
							android:layout_gravity="bottom"
							android:layout_height="wrap_content"
							android:text="Date d'ajout"
							android:textColor="@color/black"
							android:textSize="18sp" />

					<TextView
							android:id="@+id/statut_gardiennage"
							android:layout_width="match_parent"
							android:layout_gravity="bottom"
							android:layout_height="wrap_content"
							android:text="GardiennÃ© : "
							android:textColor="@color/black"
							android:textSize="18sp" />
				</LinearLayout>

			</GridLayout>
		</LinearLayout>
	</ScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
