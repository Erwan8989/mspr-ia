<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1B1B">


    <!--    Affichage top bar horizontal-->
    <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="672dp">

        <TextView
                android:id="@+id/settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@string/app_name"
                android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                android:drawableRight="@drawable/ic_exit"

                />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="80dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/welcome_back_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modification de vos logs"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/login_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/welcome_back_text"
                android:layout_marginTop="10dp"
                android:text="Encoire toi {name} !."
                android:textColor="#808080"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/email_address"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/login_text"
                android:layout_marginTop="20dp"
                android:backgroundTint="#2F2E2E"
                android:hint="Adresse Email"
                android:textColor="#808080"
                android:textColorHint="#808080"
                android:textSize="14sp"
                android:inputType="textEmailAddress"/>

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/old_password"
                android:backgroundTint="#2F2E2E"
                android:hint="Nouveau mot de passe"
                android:textColor="#808080"
                android:textColorHint="#808080"
                android:textSize="14sp"
                android:inputType="textPassword"/>

            <EditText
                    android:id="@+id/old_password"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/email_address"
                    android:backgroundTint="#2F2E2E"
                    android:hint="Ancien mot de passe"
                    android:textColor="#808080"
                    android:textColorHint="#808080"
                    android:textSize="14sp"
                    android:inputType="textPassword"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/email_address"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:textColor="#6160A0"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/rl_login_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/password"
                android:layout_marginTop="30dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_rectangle"
                    android:backgroundTint="#193155" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Confirmer"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:id="@+id/delete_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_login_button"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Supprimer mon compte"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>