<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center"
		android:orientation="vertical">

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

		<ImageView
				android:layout_width="225dp"
				android:layout_height="300dp"
				android:layout_gravity="center"
				android:layout_marginTop="15dp"
				android:id="@+id/click_image"
				android:scaleType="centerCrop"/>

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="80dp"
				android:gravity="center"
				android:orientation="horizontal">

			<TextView
					android:id="@+id/nom_choisir"
					android:layout_width="175dp"
					android:layout_height="wrap_content"
					android:layout_marginHorizontal="15dp"
					android:layout_marginTop="20dp"
					android:hint="Nom"
					android:inputType="number"
					android:minHeight="48dp" />

			<TextView
					android:id="@+id/espece_choisir"
					android:layout_width="175dp"
					android:layout_height="wrap_content"
					android:layout_marginHorizontal="15dp"
					android:layout_marginTop="20dp"
					android:hint="EspÃ¨ce"
					android:inputType="number"
					android:minHeight="48dp" />
		</LinearLayout>

		<TextView
				android:id="@+id/date_ajout_choisir"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="15dp"
				android:layout_marginTop="10dp"
				android:hint="Date d'ajout"
				android:inputType="number"
				android:minHeight="48dp" />

		<TextView
				android:id="@+id/descriptif_choisir"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="15dp"
				android:layout_marginTop="10dp"
				android:hint="Descriptif"
				android:inputType="number"
				android:minHeight="48dp" />

		<Button
				android:id="@+id/gardienner"
				android:layout_width="150dp"
				android:layout_height="55dp"
				android:layout_marginLeft="20dp"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="20dp"
				android:text="Gardienner" />

		<TextView
				android:id="@+id/section_commentaire"
				android:layout_width="match_parent"
				android:layout_height="120dp"
				android:layout_margin="20dp"
				android:background="#dcdfc7"
				android:gravity="center"
				android:text="Commentaires"
				android:textAlignment="center"
				android:textColor="#000"
				android:textSize="17dp">

		</TextView>


	</LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
