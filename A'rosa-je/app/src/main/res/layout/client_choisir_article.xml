<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:gravity="center"
  android:orientation="vertical">

  <!--    Affichage top bar horizontal-->
  <com.google.android.material.appbar.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="672dp">

    <TextView
      android:id="@+id/settings"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:drawableRight="@drawable/ic_exit"
      android:padding="16dp"
      android:text="@string/app_name"
      android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"

      />

  </com.google.android.material.appbar.AppBarLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="60dp"
    android:orientation="vertical">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="120dp"
      android:background="#dcdfc7"
      android:gravity="center"
      android:text="Photos"
      android:textAlignment="center"
      android:textColor="#000"
      android:textSize="17dp">

    </TextView>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="80dp"
      android:gravity="center"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/nom"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"
        android:hint="Nom"
        android:inputType="number"
        android:minHeight="48dp" />

      <TextView
        android:id="@+id/espece"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"
        android:hint="EspÃ¨ce"
        android:inputType="number"
        android:minHeight="48dp" />
    </LinearLayout>

    <TextView
      android:id="@+id/date_ajout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="15dp"
      android:layout_marginTop="10dp"
      android:hint="Date d'ajout"
      android:inputType="number"
      android:minHeight="48dp" />

    <TextView
      android:id="@+id/descriptif"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="15dp"
      android:layout_marginTop="10dp"
      android:hint="Descriptif"
      android:inputType="number"
      android:minHeight="48dp" />

    <Button
      android:id="@+id/gardienner"
      android:layout_width="150dp"
      android:layout_height="55dp"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="20dp"
      android:text="Gardienner" />

    <TextView
      android:id="@+id/section_commentaire"
      android:layout_width="match_parent"
      android:layout_height="120dp"
      android:layout_margin="20dp"
      android:background="#dcdfc7"
      android:gravity="center"
      android:text="Commentaires"
      android:textAlignment="center"
      android:textColor="#000"
      android:textSize="17dp">

    </TextView>


  </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
