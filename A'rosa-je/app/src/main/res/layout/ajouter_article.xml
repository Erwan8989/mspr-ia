<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >

	<!--    Affichage top bar horizontal-->
	<com.google.android.material.appbar.AppBarLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="672dp"
			tools:ignore="MissingConstraints">

		<TextView
				android:id="@+id/settings"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="16dp"
				android:text="@string/app_name"
				android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
				android:drawableRight="@drawable/ic_exit"

				/>

	</com.google.android.material.appbar.AppBarLayout>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:layout_marginTop="60dp">

		<TextView
				android:layout_width="match_parent"
				android:layout_height="120dp"
				android:background="#dcdfc7"
				android:text="upload jusqu'à x photos"
				android:textSize="17dp"
				android:gravity="center"
				android:textAlignment="center"
				android:textColor="#000">


		</TextView>


				<EditText
						android:id="@+id/nom"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginHorizontal="15dp"
						android:hint="Nom"
						android:inputType="number"
						android:layout_marginTop="20dp"
						android:minHeight="48dp" />

				<EditText
						android:id="@+id/espece"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginHorizontal="15dp"
						android:hint="Espèce"
						android:layout_marginTop="10dp"
						android:inputType="number"
						android:minHeight="48dp" />

				<EditText
						android:id="@+id/descriptif"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginHorizontal="15dp"
						android:hint="Descriptif"
						android:inputType="number"
						android:layout_marginTop="10dp"
						android:minHeight="48dp" />

				<Button
						android:id="@+id/btn_resgisterPlant"
						android:layout_width="150dp"
						android:layout_height="55dp"
						android:layout_marginLeft="20dp"
						android:layout_marginTop="10dp"
						android:layout_marginBottom="20dp"
						android:text="Enregistrer"/>

		</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>