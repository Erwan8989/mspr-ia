<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="10dp">

	<View
			android:id="@+id/view_separation"
			android:layout_width="0dp"
			android:layout_height="1dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent" />


	<TextView
			android:layout_width="wrap_content"
			android:orientation="horizontal"
			android:layout_height="wrap_content"
			android:text="Auteur"
			app:layout_constraintBottom_toTopOf="@+id/view_separation"
			android:layout_marginStart="10dp"
			android:id="@+id/nom_list_commentaire"
			app:layout_constraintStart_toStartOf="@+id/view_separation" />

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Date"
			app:layout_constraintBottom_toTopOf="@+id/view_separation"
			app:layout_constraintStart_toEndOf="@+id/nom_list_commentaire"
			android:layout_marginStart="20dp"
			android:id="@+id/date_list_commentaire" />

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Description"
			android:id="@+id/description_list_commentaire"
			android:layout_marginStart="10dp"
			app:layout_constraintTop_toBottomOf="@+id/view_separation"
			app:layout_constraintStart_toStartOf="@+id/view_separation" />

</androidx.constraintlayout.widget.ConstraintLayout>